SubDir HAIKU_TOP src kits mail ;

UsePrivateHeaders mail shared ;
UsePublicHeaders [ FDirName add-ons mail_daemon ] ;

if $(CHECK_MALLOC) {
	SubDirC++Flags -D_NO_INLINE_ASM -fcheck-memory-usage ;
}

SubDirC++Flags -D_BUILDING_mail=1 ;

UsePrivateHeaders textencoding ;

SharedLibrary libmail.so :
	c_mail_api.cpp
	crypt.cpp
	des.c
	FileConfigView.cpp
	HaikuMailFormatFilter.cpp
	mail_encoding.c
	mail_util.cpp
	MailAttachment.cpp
	MailComponent.cpp
	MailContainer.cpp
	MailDaemon.cpp
	MailMessage.cpp
	MailProtocol.cpp
	MailSettings.cpp
	NodeMessage.cpp
	numailkit.cpp
	ProtocolConfigView.cpp
	StringList.cpp
	:
	be
	libtextencoding.so
	tracker
	$(TARGET_LIBSTDC++)
	$(TARGET_NETWORK_LIBS)
	$(TARGET_SELECT_UNAME_ETC_LIB)
;
