	InstallOptionalHaikuImagePackage bebook_20081026.zip
		: $(baseURL)/bebook_20081026.zip
		: system documentation
	;
	AddSymlinkToHaikuImage home Desktop
		: /boot/system/documentation/bebook/index.html : BeBook ;
}


